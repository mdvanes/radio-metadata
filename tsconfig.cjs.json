{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/cjs",
    "declaration": true,
    "rootDir": "src",
    "removeComments": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "classic"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
