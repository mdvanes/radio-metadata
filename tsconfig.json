{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2021"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "node16"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
